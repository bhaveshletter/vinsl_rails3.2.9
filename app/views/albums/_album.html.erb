<div id='<%= album.id %>'>
<hr />
<b> Title: </b> <%= album.title %> <br />
<b> Description:  </b> <%= album.description %> <br />
<b> Photos: </b><%= album.photos.length unless album.photos.blank? %> <br />
<%= link_to 'Delete', user_album_path(@user, album), :method => :delete, :remote => true %>
<hr />

<table>
<tr>
  <th>Photos</th>
  <th>Tags</th>	
</tr>	
  <%= render(:partial => "photo", :collection => album.photos) || "There's no photos to be displayed." %>	
</table>
</div>